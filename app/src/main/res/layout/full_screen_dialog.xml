<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/primary_100"
        android:background="@drawable/sheet_shape"
        android:id="@+id/mainshape"
        >


        <EditText
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Search Doctors"
            android:lines="1"
            android:drawableStart="@drawable/ic_search_doctors"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:id="@+id/search_editText"
            android:textColorHint="@android:color/darker_gray"
            android:backgroundTint="@color/white"
            android:background="@drawable/round_button"
            android:layout_height="50dp" >
        </EditText>




        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/recyclerView_search_Doctors"
            android:overScrollMode="never"
            android:layout_height="wrap_content"
            android:background="@color/primary_100"
            android:layout_below="@id/search_editText"
            />

    </RelativeLayout>


</RelativeLayout>