<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/base_color"
    android:layout_height="match_parent">

 <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

   <RelativeLayout
       android:layout_width="match_parent"
       android:orientation="horizontal"
       android:layout_alignParentEnd="true"
       android:layout_height="wrap_content">
      <RelativeLayout
          android:layout_marginTop="30dp"
          android:layout_width="200dp"
          android:layout_toStartOf="@id/nurse"
          android:padding="8dp"
          android:backgroundTint="@color/white"
          android:layout_marginStart="20dp"
          android:minHeight="60dp"
          android:background="@drawable/round_buuble"
          android:layout_height="wrap_content">


         <TextView
             android:layout_width="wrap_content"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="5dp"
             android:textSize="14sp"
             android:textAlignment="center"
             android:gravity="center"
             android:textStyle="bold"
             android:fontFamily="@font/sub_heading"
             android:layout_centerVertical="true"
             android:id="@+id/clickHere"
             android:textColor="@color/black"
             android:text="@string/click_here_to_talk_to_elena"
             android:layout_height="wrap_content"/>


      </RelativeLayout>
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_alignParentEnd="true"
          android:orientation="horizontal"
          android:id="@+id/nurse"
          android:layout_height="wrap_content">
         <ImageView
             android:layout_width="wrap_content"
             android:layout_marginTop="5dp"
             android:clipChildren="false"
             android:layout_marginRight="-50dp"
             android:alpha="0.8"
             android:src="@drawable/nurse"
             android:layout_height="wrap_content"/>
      </LinearLayout>

   </RelativeLayout>

   <RelativeLayout
       android:layout_width="match_parent"
        android:layout_marginTop="150dp"
       android:paddingStart="10dp"
       android:textColor="@color/black"
       android:id="@+id/relative_search_doctors"
       android:textColorHint="@android:color/darker_gray"
       android:background="@drawable/round_button"
       android:layout_marginLeft="20dp"
       android:layout_marginRight="20dp"
       android:layout_height="50dp" >

      <TextView
          android:layout_width="wrap_content"
          android:text="Search for Doctors"
          android:layout_centerVertical="true"
          android:layout_marginStart="10dp"
          android:gravity="center"
          android:drawablePadding="5dp"
          android:textColor="@android:color/darker_gray"
           android:textAlignment="center"
          android:layout_height="wrap_content"
          app:drawableTint="@android:color/darker_gray"
          app:drawableStartCompat="@drawable/ic_search_doctors" />
   </RelativeLayout>
</RelativeLayout>


   <Space
       android:layout_width="match_parent"
       android:id="@+id/spacer"
       android:layout_marginTop="210dp"
       android:layout_height="wrap_content"/>

   <com.github.florent37.shapeofview.shapes.ArcView
       android:layout_width="match_parent"
       android:layout_below="@+id/spacer"
        app:shape_clip_drawable="@drawable/bottom_item"
       android:layout_height="wrap_content">
      <View
          android:layout_width="match_parent"
          android:background="@color/colorPrimary200"
          android:layout_height="match_parent"/>

   <ScrollView
       android:layout_width="wrap_content"
       android:overScrollMode="never"
       android:id="@+id/generalScrollView"
       android:scrollIndicators="none"
       android:scrollbars="none"
       android:scrollbarAlwaysDrawVerticalTrack="false"
       android:layout_height="match_parent">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">



      <LinearLayout
          android:layout_width="match_parent"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:layout_marginTop="20dp"
          android:id="@+id/heading"
          android:layout_height="wrap_content">
         <TextView
             android:layout_width="wrap_content"
             android:textStyle="bold"
             android:id="@+id/topDoctors"
             android:fontFamily="@font/sub_heading"
             android:textColor="@color/black"
             android:drawableLeft="@drawable/ic_top_doctors"
             android:gravity="center"
             android:drawablePadding="5dp"
             android:layout_weight="1"
             android:textAlignment="textStart"
             android:text="Top Doctors"
             android:layout_height="wrap_content"/>
         <TextView
             android:layout_width="wrap_content"
             android:textStyle="bold"
             android:id="@+id/explore"
             android:fontFamily="@font/sub_heading"
             android:layout_weight="1"
             android:layout_gravity=""
             android:textColor="@android:color/darker_gray"
             android:gravity="center"
             android:drawablePadding="5dp"
             android:textAlignment="textEnd"
             android:text="See more"
             android:layout_height="wrap_content"
             app:drawableRightCompat="@drawable/ic_explore_more"
             app:drawableTint="@android:color/darker_gray" />

      </LinearLayout>


      <androidx.recyclerview.widget.RecyclerView
          android:layout_width="match_parent"
          android:id="@+id/recyclerView"
          android:overScrollMode="never"
          android:layout_height="wrap_content"
          android:layout_below="@id/heading"
          android:layout_marginTop="10dp" />

      <TextView
          android:layout_width="wrap_content"
          android:textStyle="bold"
          android:id="@+id/whatYouNeed"
          android:layout_below="@id/recyclerView"
          android:layout_marginTop="20dp"
          android:layout_marginBottom="20dp"
          android:layout_marginStart="10dp"
          android:fontFamily="@font/sub_heading"
          android:textColor="@color/black"
          android:textSize="20dp"
          android:gravity="center"
          android:drawablePadding="5dp"
          android:textAlignment="textStart"
          android:text="What Do you need?"
          android:layout_height="wrap_content"
        />


      <GridLayout
          android:columnCount="2"
          android:rowCount="3"
          android:layout_below="@id/whatYouNeed"
          android:alignmentMode="alignMargins"
          android:columnOrderPreserved="false"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:padding="2dp"
          >
         <androidx.cardview.widget.CardView
             android:layout_width="0dp"
             android:layout_height="100dp"
             android:layout_columnWeight="1"
             android:layout_rowWeight="1"
             android:layout_marginEnd="10dp"
             android:layout_marginStart="10dp"
             android:layout_marginBottom="16dp"
             app:cardBackgroundColor="@color/white"
             app:cardElevation="0dp"
             app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="60dp"
                   android:src="@drawable/nearby_hospital"
                   android:layout_marginTop="5dp"
                   android:layout_gravity="center" />

               <TextView
                   android:layout_width="match_parent"
                   android:textAlignment="center"
                   android:text="Nearest Hospital"
                   android:fontFamily="@font/sub_heading"
                   android:textFontWeight="2"
                   android:layout_marginTop="10dp"
                   android:textSize="14sp"
                   android:textColor="@color/black"
                   android:layout_height="wrap_content"/>
            </LinearLayout>

         </androidx.cardview.widget.CardView>
         <!-- 1 -->

         <!-- 2 -->
         <androidx.cardview.widget.CardView
             android:layout_width="0dp"
             android:layout_height="100dp"
             android:layout_columnWeight="1"
             android:layout_rowWeight="1"
             android:layout_marginEnd="10dp"
             android:id="@+id/card_search_doctors"
             android:layout_marginStart="10dp"
             android:layout_marginBottom="16dp"
             app:cardBackgroundColor="@color/white"
             app:cardElevation="0dp"
             app:cardCornerRadius="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="60dp"
                   android:layout_marginTop="5dp"
                   android:layout_gravity="center"
                   android:src="@drawable/search_doctors"/>

               <TextView
                   android:layout_width="match_parent"
                   android:textAlignment="center"
                   android:text="Search for Doctors"
                   android:fontFamily="@font/sub_heading"
                   android:textFontWeight="2"
                   android:layout_marginTop="10dp"
                   android:textSize="14sp"
                   android:textColor="@color/black"
                   android:layout_height="wrap_content"/>
            </LinearLayout>
         </androidx.cardview.widget.CardView>

         <!-- 3 -->
         <androidx.cardview.widget.CardView
             android:layout_width="0dp"
             android:layout_height="100dp"
             android:layout_columnWeight="1"
             android:layout_rowWeight="1"
             app:cardBackgroundColor="@color/white"
             android:layout_marginEnd="10dp"
             android:layout_marginStart="10dp"
             android:layout_marginBottom="16dp"

             app:cardElevation="0dp"
             app:cardCornerRadius="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="60dp"
                   android:layout_marginTop="5dp"
                   android:layout_gravity="center"
                   android:src="@drawable/watch_videp"/>

               <TextView
                   android:layout_width="match_parent"
                   android:textAlignment="center"
                   android:text="Check Videos"
                   android:fontFamily="@font/sub_heading"
                   android:textFontWeight="2"
                   android:layout_marginTop="10dp"
                   android:textSize="14sp"
                   android:textColor="@color/black"
                   android:layout_height="wrap_content"/>
            </LinearLayout>
         </androidx.cardview.widget.CardView>

         <!-- 4 -->
         <androidx.cardview.widget.CardView
             android:layout_width="0dp"
             android:layout_height="100dp"
             android:layout_columnWeight="1"
             android:layout_rowWeight="1"
             app:cardBackgroundColor="@color/white"
             android:layout_marginEnd="10dp"
             android:layout_marginStart="10dp"
             android:layout_marginBottom="16dp"
             app:cardElevation="0dp"
             app:cardCornerRadius="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="60dp"
                   android:paddingTop="5dp"
                   android:layout_marginTop="5dp"
                   android:layout_gravity="center"
                   android:src="@drawable/tips_and_guide"/>

               <TextView
                   android:layout_width="match_parent"
                   android:textAlignment="center"
                   android:text="Tips And Guide"
                   android:fontFamily="@font/sub_heading"
                   android:textFontWeight="2"
                   android:layout_marginTop="10dp"
                   android:textSize="14sp"
                   android:textColor="@color/black"
                   android:layout_height="wrap_content"/>
            </LinearLayout>

         </androidx.cardview.widget.CardView>


      </GridLayout>


   </RelativeLayout>

   </ScrollView>

   </com.github.florent37.shapeofview.shapes.ArcView>
   </RelativeLayout>